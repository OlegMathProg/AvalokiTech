      if (sel_pts_cnt        >0) or
         (draw_spline          ) or
         (is_scene_tree_editing) or
         (inn_wnd_rct.width <=0) or
         (inn_wnd_rct.height<=0) then
        Exit; {$endregion}

      is_active       :=False;
      downtime_counter:=0;

      if down_play_anim_ptr^ then
        begin
          case Key of
            {'a'}65:
              begin
                dir_a  :=False;
                mov_dir:=mdNone;
              end;
            {'d'}68:
              begin
                dir_d  :=False;
                mov_dir:=mdNone;
              end;
            {'w'}87:
