                      //if (not IsRct1OutOfRct2(LineBndRct(x0,y0,x1,y1,eds_width),rct_clp_ptr_^)){LineCrcIntPt(x0,y0,x1,y1,rct_out.left+rct_out.width>>1,rct_out.top+rct_out.height>>1,rct_rad+1,0)} then
