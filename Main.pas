      x[1]:=x1_;
      y[1]:=y1_;
      if CheckBounds then
        begin
          dx_:=x1_-x0_;
          dy_:=y1_-y0_;
          k_ :=dy_/dx_;
          b_ :=y0_-x0_*k_;
          if (Abs(dx_)>=Abs(dy_)) then
            begin
              if (x1_<x0_) then
                begin
                  ff0:=     r1  ;
                  Swap2(r0 ,r1 );
                  Swap3(x0_,x1_);
                  Swap3(y0_,y1_);
                  x[0]:=x0_;
                  y[0]:=y0_;
