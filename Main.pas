            for i:=0 to sln_obj_pts_cnt[spline_ind]-1 do
              begin
                if (not sel_var.is_point_selected[b+i]) then
                  Rectangle
                  (
                    Trunc(sln_pts_ptr^.x)+w_a_s_x,
                    Trunc(sln_pts_ptr^.y)+w_a_s_y,
                    bmp_dst_ptr,
                    bmp_dst_width,
                    bmp_dst_height,
                    rct_clp_ptr_^,
                    local_prop
                  );
                Inc(sln_pts_ptr);
              end; {$endregion}

          end;
      end;
