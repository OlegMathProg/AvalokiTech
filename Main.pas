                  s:=GetEnumName(TypeInfo(TKindOfObject),Ord    (obj_arr[PNodeData(Items[single_selected_node_ind].Data)^.g_ind].koo));
                end;
              Delete(s,1,3);
              if (s='Empty') then
                L_Object_Name.Caption:=''
              else
                L_Object_Name.Caption:=s;
            end;
      end;
    end;
