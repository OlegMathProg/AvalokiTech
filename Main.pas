                {--------------------}(out_or_inn_subgraph_pts_ptr+sel_pts_inds_ptr^-1)^:=1;
                {--------------------}(out_or_inn_subgraph_pts_ptr+sel_pts_inds_ptr^+0)^:=1;
                {--------------------}outer_subgraph3_ptr^.first_point                  :=000000000000+sel_pts_inds_ptr^-1;
