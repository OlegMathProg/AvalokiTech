        2: {Last   Spline Object Point} {$region -fold}
          begin
            if (is_point_selected_ptr+sel_pts_inds_ptr^-1)^ then
              begin
                {Inner Subgraph Calc.}
                {--------------------}(out_or_inn_subgraph_pts_ptr+sel_pts_inds_ptr^-1)^:=2;
                {--------------------}(out_or_inn_subgraph_pts_ptr+sel_pts_inds_ptr^+0)^:=2;
