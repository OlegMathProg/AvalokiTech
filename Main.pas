                mov_dir:=mdNone;
              end;
            {'s'}83:
              begin
                dir_s  :=False;
                mov_dir:=mdNone;
              end;
          end;
        end;

      case Key of

        65,68,87,83:
          begin
            if (not dir_a) and (not dir_d) and (not dir_w) and (not dir_s) then
              is_camera_moving:=False;
            if (not down_play_anim_ptr^) then
              VisibilityChange(srf_var.inner_window_ui_visible);
